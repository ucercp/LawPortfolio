
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Layout/Index.cshtml";
}

@{
    ViewData["Title"] = "Şifre ve Kullanıcı Adı Değiştir";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="username">Yeni Kullanıcı Adı</label>
        <input type="text" name="username" class="form-control" id="username" placeholder="Yeni kullanıcı adınızı girin" />
    </div>

    <div class="form-group">
        <label for="newPassword">Yeni Şifre</label>
        <input type="password" name="newPassword" class="form-control" id="newPassword" placeholder="Yeni şifrenizi girin" />
    </div>

    <button type="submit" class="btn btn-primary">Değiştir</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
