@model Referance
@{
    ViewData["Title"] = "CreateReferance";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Ad ve Soyad</label>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<label>Çalışılan Pozisyon</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />							
							<button class="btn btn-primary">Referans Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

