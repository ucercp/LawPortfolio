@model List<Referance>
@{
    ViewData["Title"] = "ReferanceList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Referanslarınla ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad ve Soyad</th>
									<th scope="col">Unvan</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ReferanceId</td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td><a href="/Referance/DeleteReferance/@item.ReferanceId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Referance/UpdateReferance/@item.ReferanceId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Referance/CreateReferance/" class="btn btn-primary">Yeni Referans Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

