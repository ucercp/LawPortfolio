@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yorumlar  Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad ve Soyad</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Sil</th>
									
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.TestimonialId</td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.CreatedAt</td>

										<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						@* 						<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Girişi</a>
						*@
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

